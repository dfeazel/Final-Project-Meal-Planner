import tkinter as tk
from tkinter import messagebox

meal_plan = {
    "Monday": "Chicken and Broccoli",
    "Tuesday": "Spaghetti",
    "Wednesday": "Steak Quesadillas",
    "Thursday": "Chicken Tacos",
    "Friday": "Philly Cheese Steak",
    "Saturday": "Beef Stew",
    "Sunday": "Chicken Alfredo"
}

def generate_meal_plan():
    label_meal_plan.config(text="Meal Plan for the Week:\n"
                                "Monday: Chicken and Broccoli\n"
                                "Tuesday: Spaghetti \n"
                                "Wednesday: Steak Quesadillas\n"
                                "Thursday: Chicken Tacos\n"
                                "Friday: Philly Cheese Steak\n"
                                "Saturday: Beef Stew\n"
                                "Sunday: Chicken Alfredo")

def show_meal_details():
    second_window = tk.Toplevel(root)
    second_window.title("Detailed Meal Plan")

    label_details = tk.Label(second_window, text="Click a day to see the meal details", font=("Arial", 12))
    label_details.pack(pady=10)

    for day, meal in meal_plan.items():
        button_day = tk.Button(second_window, text=day, command=lambda day=day, meal=meal: show_specific_meal(day, meal))
        button_day.pack(pady=5)

    button_close = tk.Button(second_window, text="Close", command=second_window.destroy)
    button_close.pack(pady=10)

def show_specific_meal(day, meal):
    messagebox.showinfo(f"{day} Meal", f"The meal for {day} is: {meal}")

def exit_application():
    root.quit()
